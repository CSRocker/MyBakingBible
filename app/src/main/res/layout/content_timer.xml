<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/md_pink"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clarachen.mealplan.Timer"
    tools:showIn="@layout/activity_timer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_box_height"
        android:text="Baking..."
        android:textSize="@dimen/title_txtsize"
        android:layout_centerHorizontal="true"
        android:id="@+id/timerTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_box_height"
        android:text="00:00:00"
        android:textSize="@dimen/title_txtsize"
        android:id="@+id/timer"
        android:layout_below="@+id/timerTitle"
        android:layout_alignLeft="@+id/timerTitle"
        android:layout_alignStart="@+id/timerTitle"
        android:layout_marginTop="77dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_box_height"
        android:text=""
        android:textSize="@dimen/title_txtsize"
        android:id="@+id/done"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignStart="@+id/timer" />

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:text="Stop"
        android:id="@+id/button"
        android:onClick="closeTimer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp"
        android:textSize="@dimen/btn_txtsize"
        android:background="@color/md_cyan"/>


</RelativeLayout>
